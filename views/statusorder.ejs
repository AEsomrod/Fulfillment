<body>
    <%- include('navbar') %>
        <div class="d-flex">
            <nav class="nav flex-column" style="background-color: white; width: 350px; height: 900px; padding: 25px 0 0 30px;">
                <!--<a class="nav-link" href="/dashboard" style="color: #333333;">Dashboard</a>-->
                <a class="nav-link" href="/user" style="color: #333333;">User</b></a>
                <a class="nav-link" href="/group" style="color: #333333;">Group</a>
                <a class="nav-link" href="/stock" style="color: #333333;">Stock</a>
                <a class="nav-link" href="/statusorder" style="color: #1a75ff;"><b>StatusOrder</b></a>

            </nav>
            <div style="width: 100%; background-color: rgb(245, 245, 245); margin-left: 2px; padding: 50px;">
                <nav class="navbar">
                    <div class="container-fluid">
                        <h1 style="margin-top: auto; margin-bottom: auto;">สถานะสินค้า</h1>
                        <form class="d-flex" action="/search" method="post">
                            <input class="form-control me-2" type="search" name="search" placeholder="Search Order" aria-label="Search">
                            <button class="btn" style="background-color: #1a75ff; width: 170px; color: white;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg>
                                Search
                            </button>
                            <a class="btn" style="background-color: #ffa600; width: 170px; color: white; margin-left: 5px;" href="/form_AddUser">+AddUser</a>
                        </form>
                    </div>
                </nav>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">ชื่อ</th>
                            <th scope="col">สกุล</th>
                            <th scope="col">ที่อยู่</th>
                            <th scope="col">สร้างโดย</th>
                            <th scope="col">สถานะสินค้า</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Object.values(order_address).forEach(function(item){%>                        
                        <tr>
                            <td vertical-align: bottom;><%= order++ %></td>
                            <td><%= item.FirstName %></td>
                            <td><%= item.LastName %></td>
                            <td><%= item.Address %></td>
                            <td><%= item.createdBy %></td>
                            <td><%= item.StatusOrder %></td>
                            <td>                              
                            </td>
                            <td>
                                
                                <a class="btn" href="/updateStatus/<%= item._id %>" onclick="return confirm('ยืนยันการส่งสินค้า')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-truck" viewBox="0 0 16 16">
                                        <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                                      </svg>
                                </a>
                            </td>                          
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
</body>

</html>